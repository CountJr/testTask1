            "email": "countjr@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "phpunit/phpunit": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4",
        "squizlabs/php_codesniffer": "2.*",
        "codeclimate/php-test-reporter": "^0.3.2"
    },
    "autoload": {
        "files": [
            "src/task.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "beauty": "vendor/bin/phpcbf --standard=PSR2 src tests",
        "sniff": "vendor/bin/phpcs --standard=PSR2 src tests"
    }
}
